{
    "compilerOptions": {
        "sourceMap": true,
        "module": "es2015",
        "target": "es2015",
        "jsx": "react",
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "build",
    ],
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/*.ts",
        "src/*.tsx"
    ],
    "files": [
        "global.d.ts"
    ]
}